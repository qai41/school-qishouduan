page {
  background-color: #F2F3F3;
}
.orderderails {
  padding: 0 30rpx;
  padding-top: 30rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
  overflow: hidden;
}
.orderderails .few {
    color: #333333;
    font-weight: 400;
}
.orderderails .few text {
      font-size: 26rpx;
      line-height: 36rpx;
}
.orderderails .few text:first-child {
        font-size: 40rpx;
}
.orderderails .few text:first-child::before {
          width: 12rpx;
          height: 12rpx;
          display: inline-block;
          content: '';
          background-color: #1A7AFC;
          position: relative;
          top: -12rpx;
          margin-right: 30rpx;
}
.orderderails .few text:last-child {
        font-size: 40rpx;
        color: #DE3535;
}
.orderderails .adderss .ad_left {
    margin-top: 28rpx;
    margin-bottom: 34rpx;
}
.orderderails .adderss .ad_left view {
      width: 64rpx;
      font-size: 22rpx;
      text-align: center;
      color: #777777;
      line-height: 36rpx;
      overflow: hidden;
}
.orderderails .adderss .ad_left view:first-child::after {
        position: relative;
        left: 32rpx;
        margin: 12rpx 0;
        display: block;
        content: '';
        width: 2rpx;
        height: 56rpx;
        background-color: #CCCCCC;
}
.orderderails .adderss .ad_right {
    padding: 30rpx 30rpx;
    overflow: hidden;
    clear: both;
}
.orderderails .adderss .ad_right view {
      font-size: 28rpx;
      color: #333333;
      line-height: 36rpx;
      font-weight: 500;
}
.orderderails .adderss .ad_right .ac {
      margin-top: 12rpx;
      margin-bottom: 30rpx;
      font-size: 24rpx;
      color: #777777;
      font-weight: 400;
}

